<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_graund_main"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textVie3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="__________________________________________"

        app:layout_constraintEnd_toEndOf="@+id/input_x"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_x"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/input_x"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toprect"
        android:ems="10"
        android:hint="Player with X"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#787878"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVie3" />

    <EditText
        android:id="@+id/input_o"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/toprect"
        android:ems="10"
        android:hint="Player with O"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"

        android:textColorHint="#787878"
        app:layout_constraintEnd_toEndOf="@+id/input_x"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_x"
        app:layout_constraintTop_toBottomOf="@+id/input_x" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="XO Players"
        android:textColor="@color/blue"
        android:textSize="41dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textVie3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@color/white"
        android:backgroundTint="@color/red"
        android:textSize="18dp"
        android:text="Start"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/input_o"
        app:layout_constraintTop_toBottomOf="@+id/input_o" />

    <TextView
        android:id="@+id/textView5"

        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="__________________________________________"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_o"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>